<div class="banner">
  <div class="banner-content">
    <div class="banner-box-one">
      <h1>Shake</h1>
    </div>
    <div class="banner-box-two">
      <h1>your cocktail!</h1>
    </div>
    <%= link_to "Add a new cocktail", new_cocktail_path, { class: "btn btn-success" } %>
  </div>
</div>

<div class="container" style="text-align: center;">
  <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-md-6">
          <div class="row">
            <h3><%= cocktail.name %><h3>
            <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill, class: "avatar" %>
          </div>
          <div class="row">
            <%= link_to "Shake!", cocktail_path(cocktail), { class: "btn btn-primary" } %>
            <%= link_to "Delete", cocktail_path(cocktail), method: :delete,  class: "btn btn-primary" %>
          </div>
        </div>

      <% end %>
  </div>
</div>

