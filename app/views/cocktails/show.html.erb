<h1><%= @cocktail.name %></h1>

<h3>Ingredients</h3>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %>
    <%= dose.ingredient.name %><%= link_to "Delete ingredient", dose_path(dose),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>

<%= link_to "Back to cocktails", cocktails_path, { class: "btn btn-primary" } %>
<%= link_to "Add new ingredient", new_cocktail_dose_path(@cocktail), { class: "btn btn-primary" } %>
